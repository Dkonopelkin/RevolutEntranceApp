<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleRatesListStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorPrimaryBlack</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DescriptionRatesListStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorPrimaryGrey50</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="InputFieldRatesListStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorPrimaryBlack</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">textEnd</item>
    </style>
</resources>
